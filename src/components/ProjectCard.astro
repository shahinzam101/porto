---
const { name, description, image, github, demo, techStack = [] } = Astro.props;
---

<div class="bg-white dark:bg-zinc-800 rounded-2xl shadow-lg overflow-hidden transition hover:scale-[1.02]">
  <img src={image} alt={name} class="w-full h-48 object-cover" loading="lazy" />
  <div class="p-4 space-y-2">
    <h3 class="text-xl font-bold text-zinc-800 dark:text-white">{name}</h3>
    <p class="text-sm text-zinc-600 dark:text-zinc-300">{description}</p>

    {techStack.length > 0 && (
      <div class="flex flex-wrap gap-2 text-xs mt-2">
        {techStack.map((tech) => (
          <span class="bg-zinc-100 dark:bg-zinc-700 text-zinc-800 dark:text-white px-2 py-1 rounded-full">
            {tech}
          </span>
        ))}
      </div>
    )}

    <div class="flex gap-3 mt-4">
      <a href={github} target="_blank" class="text-sm bg-zinc-800 text-white px-4 py-1 rounded hover:bg-zinc-700">GitHub</a>
      {demo && (
        <a href={demo} target="_blank" class="text-sm bg-indigo-600 text-white px-4 py-1 rounded hover:bg-indigo-500">دمو</a>
      )}
    </div>
  </div>
</div>