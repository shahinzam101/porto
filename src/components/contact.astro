---
// فایل Contact.astro
const contactMethods = [
  {
    name: "ایمیل",
    value: "shahinzam1402@gmail.com",
    icon: "/icons/email-icon.svg",
    link: "mailto:shahinzam1402@gmail.com",
    description: "برای پروژه‌های کاری و همکاری"
  },
  {
    name: "گیت‌هاب",
    value: "github.com/shahinzam101",
    icon: "/icons/github-icon.svg",
    link: "https://github.com/shahinzam101",
    description: "پروژه‌های متن‌باز"
  },
  {
    name: "تلگرام",
    value: "Shahin_zam",
    icon: "/icons/telegram-icon.svg",
    link: "https://t.me/Shahin_zam",
    description: "پیام‌رسان سریع"
  }
];
---

<section id="contact" class="py-20 min-h-screen bg-zinc-50 dark:bg-zinc-900 font-vazir">
  <div class="max-w-6xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-extrabold mb-4 bg-gradient-to-r text-zinc-800 dark:text-zinc-100 bg-clip-text text-transparent">
        تماس با من
      </h2>
      <p class="text-xl text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto">
        آماده همکاری و پاسخگویی به سوالات شما هستم. از طریق راه‌های زیر می‌تونید باهام در ارتباط باشید.
      </p>
    </div>

    <!-- Contact Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-16">
      {
        contactMethods.map((method, index) => (
          <div
            class="contact-card group glass-effect rounded-2xl p-6 shadow-2xl transition-all duration-500 hover:scale-[1.03] hover:rotate-1 opacity-0 translate-y-8"
            style={`transition-delay: ${index * 100}ms`}
          >
            <div class="flex items-center gap-4">
                <div class="text-3xl">
                    <img src={method.icon} alt={method.name + 'icon'} class="w-8 h-8 object-contain" loading="lazy">
                </div>
              <div class="flex-1">
                <h3 class="text-lg font-bold text-zinc-800 dark:text-zinc-100 mb-1">
                  {method.name}
                </h3>
                <p class="text-sm text-zinc-600 dark:text-zinc-400 mb-2">
                  {method.description}
                </p>
                <a
                  href={method.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-zinc-700 dark:text-zinc-300 hover:text-indigo-600 dark:hover:text-indigo-400 font-medium transition-colors"
                >
                  {method.value}
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Extra Info -->
    <div class="text-center">
      <div class="glass-effect inline-flex items-center gap-3 px-8 py-4 rounded-full shadow-lg">
        <span class="text-2xl">⚡</span>
        <span class="font-medium text-zinc-700 dark:text-zinc-300">
          معمولاً در کمتر از ۲۴ ساعت پاسخ می‌دهم
        </span>
      </div>
    </div>
  </div>

  <script is:inline>
    // انیمیشن ظاهر شدن کارت‌ها بعد از بارگزاری
    window.addEventListener("DOMContentLoaded", () => {
      const cards = document.querySelectorAll(".contact-card");
      cards.forEach((card, i) => {
        setTimeout(() => {
          card.classList.remove("opacity-0", "translate-y-8");
          card.classList.add("animate");
        }, i * 150);
      });
    });
  </script>

  <style is:global>
    .contact-icon {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      transition: all 0.3s ease;
    }
    .contact-card:hover .contact-icon {
      transform: scale(1.1) rotate(5deg);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }
    .glass-effect {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .dark .glass-effect {
      background: rgba(0, 0, 0, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.05);
    }
  </style>
</section>
